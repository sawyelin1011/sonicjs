{
  "name": "any-cms",
  "version": "3.0.0",
  "description": "Production-ready, modular, and flexible headless CMS with dynamic plugin + theme system",
  "private": true,
  "workspaces": [
    "packages/*",
    "my-any-cms-app"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=my-any-cms-app",
    "build:core": "npm run build --workspace=@any-cms/core",
    "deploy": "npm run deploy --workspace=my-any-cms-app",
    "test": "npm run test --workspace=@any-cms/core",
    "test:cov": "npm run test:cov --workspace=@any-cms/core",
    "test:watch": "npm run test:watch --workspace=@any-cms/core",
    "e2e": "playwright test --config=tests/playwright.config.ts",
    "e2e:ui": "playwright test --config=tests/playwright.config.ts --ui",
    "prepare": "husky",
    "type-check": "npm run type-check --workspace=@any-cms/core",
    "lint": "npm run type-check",
    "version:patch": "npm version patch --workspace=@any-cms/core --no-git-tag-version && node scripts/sync-versions.js",
    "version:minor": "npm version minor --workspace=@any-cms/core --no-git-tag-version && node scripts/sync-versions.js",
    "version:major": "npm version major --workspace=@any-cms/core --no-git-tag-version && node scripts/sync-versions.js",
    "publish:core": "npm run build:core && npm publish --workspace=@any-cms/core",
    "publish:create-app": "npm publish --workspace=@any-cms/create-app",
    "publish:all": "npm run publish:core && npm run publish:create-app",
    "release:patch": "npm run version:patch && npm run publish:all",
    "release:minor": "npm run version:minor && npm run publish:all",
    "release:major": "npm run version:major && npm run publish:all"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@hono/zod-openapi": "^0.19.8",
    "@hono/zod-validator": "^0.7.0",
    "@libsql/client": "^0.15.9",
    "@any-cms/core": "^3.0.0",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.31.2",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "highlight.js": "^11.11.1",
    "hono": "^4.10.4",
    "marked": "^16.4.1",
    "motion": "^12.23.22",
    "semver": "^7.7.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251014.0",
    "@playwright/test": "^1.53.1",
    "@types/node": "^24.9.2",
    "@types/semver": "^7.7.0",
    "@vitest/coverage-v8": "^4.0.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "playwright": "^1.53.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.5",
    "wrangler": "^4.45.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tsc --noEmit"
    ]
  }
}
